Options -Indexes

RewriteEngine on

# ErrorDocument 404 /app/controller/error.php

# Login
RewriteRule ^login/?$ app/controller/loginController.php?action=login [QSA,L]

RewriteRule ^login/process/?$ app/controller/loginController.php?action=processLogin [QSA,L]

RewriteRule ^logout/?$ app/controller/loginController.php?action=logout [QSA,L]


# Account
RewriteRule ^register/process/?$ app/controller/loginController.php?action=processRegister [QSA,L]

RewriteRule ^account/?$ app/controller/siteController.php?action=account [QSA,L]

RewriteRule ^account/process/?$ app/controller/siteController.php?action=processAccount [QSA,L]


# Site
RewriteRule ^$ app/controller/siteController.php?action=home [QSA,L]

RewriteRule ^navigate/process/?$ app/controller/siteController.php?action=processNavigation [QSA,L]

RewriteRule ^courses/?$ app/controller/siteController.php?action=courses [QSA,L]

RewriteRule ^courses/publish/?$ app/controller/siteController.php?action=publish [QSA,L]

RewriteRule ^lessons/?$ app/controller/siteController.php?action=lessons [QSA,L]


# Content
RewriteRule ^authors/view/(\w+)/?$ app/controller/contentController.php?action=viewAuthor&aname=$1 [QSA,L]

RewriteRule ^courses/view/(\d+)/?$ app/controller/contentController.php?action=viewCourse&cid=$1 [QSA,L]

RewriteRule ^courses/view/(\d+)/load/?$ app/controller/contentController.php?action=loadCourse [QSA,L]

RewriteRule ^courses/new/?$ app/controller/siteController.php?action=newCourse [QSA,L]

RewriteRule ^courses/edit/(\d*)/?$ app/controller/siteController.php?action=newCourse&cid=$1 [QSA,L]

RewriteRule ^courses/edit/process/(\d*)/?$ app/controller/contentController.php?action=processCourse&cid=$1 [QSA,L]

RewriteRule ^lessons/edit/(\d*)/?$ app/controller/contentController.php?action=newLesson&lid=$1 [QSA,L]

RewriteRule ^lessons/new/?$ app/controller/contentController.php?action=newLesson [QSA,L]

RewriteRule ^lessons/edit/process/(\d*)/?$ app/controller/contentController.php?action=processLesson&lid=$1 [QSA,L]

RewriteRule ^search/?$ app/controller/contentController.php?action=search [QSA,L]
